<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#eeebeb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/beer_icon"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:singleLine="true"
            android:textColor="#000000"
            android:id="@+id/title"
            android:paddingLeft="15dp"
            android:textSize="14dp"
            android:text = "제목을 입력해주세요."
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_title" />
        <LinearLayout
            android:id="@+id/year_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_below="@+id/title"
            android:orientation="horizontal">
            <TextView
                android:singleLine="true"
                android:textColor="#000000"
                android:id="@+id/year"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_year" />
            <TextView
                android:id="@+id/text_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="4dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="년"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/month_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_alignLeft="@+id/time"
            android:layout_below="@+id/title"
            android:orientation="horizontal">
            <TextView
                android:singleLine="true"
                android:textColor="#000000"
                android:id="@+id/month"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_small" />
            <TextView
                android:id="@+id/text_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:text="월"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:orientation="horizontal">
            <TextView
                android:singleLine="true"
                android:textColor="#000000"
                android:id="@+id/day"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_small" />
            <TextView
                android:id="@+id/text_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:text="일"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_below="@+id/year_part"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:singleLine="true"
                android:textColor="#000000"
                android:id="@+id/hour"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="4dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="시"/>
            <TextView
                android:singleLine="true"
                android:textColor="#000000"
                android:id="@+id/minute"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:text="분"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/map_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginBottom="9dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/register_map_search">
                <TextView
                    android:id="@+id/address"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="장소가 어디요"
                    android:textColor="#000000"
                    android:textSize="14dp">
                </TextView>
                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:text="자세히"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/show_detail_btn_"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
    <TextView
        android:textColor="#000000"
        android:id="@+id/memo"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginBottom="25dp"
        android:gravity="top"
        android:text="메모를 입력해주세요."
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:paddingTop="11dp"
        android:background="@drawable/register_memo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <Button
            android:id="@+id/btn_people"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="현재참여인원"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/finish_btn_push_style"/>

        <Button
            android:id="@+id/btn_participate"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="참여하기"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/finish_btn_push_style"/>
    </LinearLayout>
        <Button
            android:id="@+id/btn_share"
            android:layout_width="121dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="공유하기"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/finish_btn_push_style"/>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_margin="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/side_nav_bar"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/commentimg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/custom_callout_balloon"/>
                <TextView
                    android:layout_toRightOf="@+id/commentimg"
                    android:id="@+id/comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="댓글"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_toRightOf="@+id/comment_title"
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:id="@+id/comment_refresh"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/refresh"/>
        </RelativeLayout>
            <Button
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="댓글 더보기"
                android:textSize="12sp"
                android:background="@drawable/register_year"/>
        <ListView
            android:listSelector="#00000000"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/expandableListView"
            android:layout_gravity="center_horizontal" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <EditText
                        android:id="@+id/edit_text_message"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_gravity=""
                        android:textSize="10sp"/>
                    <Button
                        android:id="@+id/button_send_message"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/finish_btn_push_style"
                        android:text="SEND"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
        </LinearLayout>
            </LinearLayout>
</ScrollView>
