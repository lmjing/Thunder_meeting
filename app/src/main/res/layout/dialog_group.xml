<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="242dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fcaf17">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소속 이름"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:id="@+id/dialog_groupName"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_rootid"
            android:textSize="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffff"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_toRightOf="@+id/dialog_groupName"
            android:text=""/>



    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="14dp"
            android:id="@+id/dialog_groupContent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        </ScrollView>
        <Button
            android:layout_width="141dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:id="@+id/dialog_groupbtn"
            android:text="소속 선택"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:background="@drawable/finish_btn_push_style"/>


    </LinearLayout>


</LinearLayout>
