<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".v2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="146dp"
                android:layout_height="119dp"
                android:src="@mipmap/applogo"    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="휴대폰 번호만 수정 가능 합니다."/>
            <LinearLayout
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/modify_border"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal|center_vertical">

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="200dp"
                    android:enabled="false"
                    android:layout_marginLeft="21dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp" >
                <LinearLayout
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/modify_border">

                    <EditText
                        android:id="@+id/edit_year"
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:enabled="false"
                        android:gravity="center"
                        android:hint="생년"
                        android:background="@null"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="59dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/modify_border"                    >

                    <EditText
                        android:id="@+id/edit_month"
                        android:layout_width="59dp"
                        android:gravity="center"
                        android:hint="월"
                        android:enabled="false"
                        android:layout_height="30dp"
                        android:background="@null"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="59dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/modify_border"
                    android:layout_marginRight="20dp">

                    <EditText
                        android:id="@+id/edit_day"
                        android:layout_width="59dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:hint="일"
                        android:layout_height="30dp"
                        android:background="@null" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="208dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp" >
                <LinearLayout
                    android:layout_width="63dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="9dp"
                    android:background="@drawable/join_border">

                    <EditText
                        android:id="@+id/edit_phone1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="010"
                        android:background="@null"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="63dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="9dp"
                    android:background="@drawable/join_border"                    >

                    <EditText
                        android:id="@+id/edit_phone2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="1234"
                        android:background="@null"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="63dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/join_border">

                    <EditText
                        android:id="@+id/edit_phone3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="5678"
                        android:background="@null"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="34dp">
        <Button
            android:id="@+id/modify_cancel"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="12.5dp"
            android:textColor="#ffffff"
            android:background="@drawable/modify_cancel_btn_style"/>
        <Button
            android:id="@+id/modify_finish"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="12.5dp"
            android:textColor="#ffffff"
            android:background="@drawable/modify_finish_btn_style"/>

    </LinearLayout>

</LinearLayout>

