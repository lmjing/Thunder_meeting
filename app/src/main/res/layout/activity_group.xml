<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sopt.android.thunder.GroupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="94dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group_image_sopt_new"
            android:id="@+id/imageView3" />

        <LinearLayout
            android:layout_width="360dp"
            android:background="#b3b3b3"
            android:layout_height="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="94dp"
        android:layout_height="94dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@mipmap/group_image_dnomade" />

        <LinearLayout
            android:layout_width="360dp"
            android:background="#b3b3b3"
            android:layout_height="4dp"/>

    </LinearLayout>

<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="64dp"
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:id="@+id/sign_num_group"
        android:text="101"/>
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="161dp"
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:id="@+id/num_group"
        android:text="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="207dp">

        <LinearLayout
            android:id="@+id/group_change"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@mipmap/group_box"
            android:layout_width="300dp" android:layout_height="wrap_content">

            <Spinner
                android:layout_width="180dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="18dp"
                android:background="@mipmap/group_btn_name"
                android:layout_height="44dp"
                android:id="@+id/spinner_group" />

            <Button
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/group_btn_delete"
                android:id="@+id/btn_group_delete" />
        </LinearLayout>

        <Button
            android:layout_marginTop="19dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/group_plus_btn_push_style"
            android:id="@+id/btn_group_plus" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:text="확인"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="400dp"
            android:background="@drawable/finish_btn_push_style"
            android:id="@+id/btn_group_finish" />
    </LinearLayout>



</RelativeLayout>
