<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_btn_food"/>
        <ImageView
            android:id="@+id/drink"
            android:layout_toRightOf="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_btn_drink"/>
        <ImageView
            android:id="@+id/play"
            android:layout_toRightOf="@id/drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_btn_play"/>
        <ImageView
            android:id="@+id/coffee"
            android:layout_toRightOf="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_btn_coffee"/>
        </LinearLayout>
        <View
            android:id="@+id/shadow"
            android:layout_marginTop="66dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ccb0b2b4"/>
        <net.daum.mf.map.api.MapView
            android:id="@+id/map_view"
            android:layout_marginTop="66dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</RelativeLayout>